              />
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold small text-secondary"
                >Email <span class="text-danger">*</span></label
              >
              <input
                name="email"
                type="email"
                class="form-control form-control-pill"
                placeholder="nama@email.com"
                value="<%= typeof email !== 'undefined' ? email : '' %>"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold small text-secondary"
                >Phone (WhatsApp) <span class="text-danger">*</span></label
              >
              <div class="input-group">
                <span
                  class="input-group-text bg-light border-end-0"
                  style="border-radius: 8px 0 0 8px; border-color: #dfe1e5"
                >
                  ðŸ‡®ðŸ‡©
                </span>
                <input
                  name="phone"
                  type="tel"
                  class="form-control form-control-pill border-start-0"
                  style="border-radius: 0 8px 8px 0"
                  placeholder="8123xxxxxxx"
                  value="<%= typeof phone !== 'undefined' ? phone : '' %>"
                  required
                />
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold small text-secondary"
                  >Password</label
                >
                <input
                  name="password"
                  type="password"
                  class="form-control form-control-pill"
                  placeholder="â€¢â€¢â€¢â€¢â€¢â€¢"
                  minlength="6"
                  required
                />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold small text-secondary"
                  >Konfirmasi</label
                >
                <input
                  name="repassword"
                  type="password"
                  class="form-control form-control-pill"
                  placeholder="â€¢â€¢â€¢â€¢â€¢â€¢"
                  minlength="6"
                  required
                />
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label fw-bold small text-secondary"
                >Kode Referral (Opsional)</label
              >
              <input
                name="ref"
                type="text"
                class="form-control form-control-pill"
                value="<%= typeof ref !== 'undefined' ? ref : '' %>"
              />
            </div>

            <button
              type="submit"
              class="btn btn-brand w-100 mb-4 py-3 d-flex align-items-center justify-content-center"
            >
              <i class="fas fa-user-plus me-2"></i> Buat Akun Baru
            </button>

            <div class="text-center text-muted small">
              Dengan mendaftar, Anda menyetujui
              <a href="#" class="text-decoration-none">Ketentuan Layanan</a> dan
              <a href="#" class="text-decoration-none">Kebijakan Privasi</a>
              kami.
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE: HERO -->
    <div
      class="col-lg-6 d-none d-lg-flex flex-column justify-content-center align-items-center text-white right-side-bg p-5"
    >
      <div class="mw-100" style="max-width: 500px">
        <h1 class="display-4 fw-bold mb-4">
          WhatsApp Andaâ€”<br />dengan Kekuatan Super
        </h1>
