<style>
  :root {
    --wa-brand: #25d366;
    --wa-dark: #075e54;
    --bg-right: #003126; /* Deep green */
  }
  .min-vh-100 {
    min-height: 100vh;
  }
  .form-control-pill {
    border-radius: 8px;
    padding: 12px 15px;
    border: 1px solid #dfe1e5;
    background-color: #f8f9fa;
  }
  .form-control-pill:focus {
    border-color: var(--wa-brand);
    box-shadow: 0 0 0 0.2rem rgba(37, 211, 102, 0.25);
    background-color: #fff;
  }
  .btn-brand {
    background-color: var(--wa-brand);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 12px;
    font-weight: 600;
    transition: all 0.2s;
  }
  .btn-brand:hover {
    background-color: #1ebc57;
    color: white;
  }
  .right-side-bg {
    background: radial-gradient(circle at 50% 50%, #0d5546 0%, #00251a 100%);
    position: relative;
    overflow: hidden;
  }
  .right-side-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("https://user-images.githubusercontent.com/1500684/235473775-5980757a-c756-42ee-9783-c90a1961524e.svg")
      no-repeat center center;
    opacity: 0.1;
    background-size: cover;
  }
  .feature-list i {
    color: var(--wa-brand);
    margin-right: 10px;
  }
  .brand-logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--wa-dark);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  @media (max-width: 576px) {
    .brand-logo {
      font-size: 1.2rem;
    }
    .brand-logo i {
      font-size: 1.5rem !important;
    }
    h2 {
      font-size: 1.5rem;
    }
  }
</style>

<div class="container-fluid p-0">
  <div class="row g-0 min-vh-100">
    <!-- LEFT SIDE: FORM -->
    <div class="col-lg-6 d-flex flex-column bg-white position-relative">
      <!-- Header: Logo & Login -->
      <div class="d-flex justify-content-between align-items-center p-3 p-md-4">
        <a href="/" class="brand-logo">
          <i class="fab fa-whatsapp text-success" style="font-size: 2rem"></i>
          <span>w@pi</span>
        </a>
        <div class="d-flex gap-2">
          <a
            href="/auth/login"
            class="btn btn-outline-secondary px-3 d-flex align-items-center"
            style="border-radius: 8px"
          >
            <i class="fas fa-sign-in-alt d-md-none"></i>
            <span class="d-none d-md-inline">Login</span>
            <span class="d-md-none ms-2">Login</span>
          </a>
        </div>
      </div>

      <div class="row justify-content-center my-auto w-100 mx-0 px-4 px-md-5">
        <div class="col-md-8 col-lg-8">
          <div class="text-center mb-4">
            <h2 class="fw-bold text-dark">Buat akun w@pi Anda</h2>
            <p class="text-muted">
              Mulai sekarang - Gratis selamanya. Tanpa kartu kredit.
            </p>
          </div>

          <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
          <% } %>

          <form action="/auth/register" method="POST">
            <div class="mb-3">
              <label class="form-label fw-bold small text-secondary"
                >Nama Lengkap <span class="text-danger">*</span></label
              >
              <input
                name="name"
                type="text"
                class="form-control form-control-pill"
                placeholder="Contoh: Eko Hendratno"
                value="<%= typeof name !== 'undefined' ? name : '' %>"
