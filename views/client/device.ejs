<div class="d-flex justify-content-between align-items-center mb-4">
  <h4 class="text-success">
    <i class="fa fa-mobile-alt me-2"></i>Manajemen Perangkat
  </h4>
</div>

<!-- Statistik Perangkat -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="stat-card">
      <h5>Total Perangkat</h5>
      <h2 class="text-success">
        <%= typeof countDevice !== 'undefined' ? countDevice : 0 %> / <%=
        Array.isArray(devices) ? devices.length : 0 %>
      </h2>
    </div>
  </div>
  <div class="col-md-6">
    <div class="stat-card">
      <h5>Terakhir Diperbarui</h5>
      <h2 class="text-success">
        <%= countDeviceLast && countDeviceLast.last_active ?
        countDeviceLast.last_active : '-' %>
      </h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="stat-card">
      <h5 class="mb-4"><i class="fa fa-list me-2"></i>Daftar Perangkat</h5>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID Perangkat</th>
              <th>Nama Perangkat</th>
              <th>Nomor WA</th>
              <th>Life Time</th>
              <th>Daily Limit</th>
              <th>Status</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% if (!devices || devices.length===0) { %>
            <tr>
              <td colspan="5" class="text-center">
                Tidak ada device terdaftar
              </td>
            </tr>
            <% } else { %> <% devices.forEach(device=> { %>

            <tr>
              <td><code><%= device.device_key %></code></td>
              <td><%= device.name %></td>
              <td><%= device.phone %></td>
              <td><%= (device.life_time || 0) %> hari</td>
              <td>
                <%= (device.message_count_today.total || 0) %>/<%=
                (device.limit_daily || 0) %> pesan
              </td>
              <td>
                <% const statusClass={ 'connected' : 'connected' ,
                'disconnected' : 'disconnected' , 'connecting' : 'connecting'
                }[device.status] || 'disconnected' %>
                <span class="status-badge <%= statusClass %>">
                  <i
                    class="fa fa-<%= statusClass === 'connected' ? 'check' : 'times' %>-circle"
                    style="color:<%= statusClass === 'connected' ? 'green' : 'red' %>"
                  ></i>
                  <%= device.status.charAt(0).toUpperCase() +
                  device.status.slice(1) %>
                </span>
              </td>
              <td>
                <% if (['connecting', 'disconnected' ].includes(device.status))
                { %>
                <a
                  href="/client/device/status?deviceKey=<%= device.device_key %>"
                  class="btn btn-sm btn-success btn-action"
                >
                  <i class="fa fa-qrcode"></i> Scan QR
                </a>
                <% } else { %>
                <button
                  class="btn btn-sm btn-info btn-action"
                  onclick="addDeviceSession('<%= device.device_key %>')"
                  data-bs-toggle="modal"
                  data-bs-target="#formKirimPesan"
                >
                  <i class="fa fa-envelope"></i>
                </button>
                <% } %>

                <a
                  title="Group"
                  href="/client/device/group?deviceKey=<%= device.device_key %>"
                  class="btn btn-sm btn-secondary btn-action"
                >
                  <i class="fas fa-user-group"></i>
                </a>
                <a
                  title="Lihat"
                  href="/client/device/status?deviceKey=<%= device.device_key %>"
                  class="btn btn-sm btn-success btn-action"
                >
                  <i class="fa fa-eye"></i>
                </a>
                <a
                  href="javascript:void()"
                  title="Hapus"
                  class="btn btn-sm btn-danger btn-action"
                  onclick="confirmDelete('<%= device.device_key %>')"
                >
                  <i class="fa fa-trash"></i>
                </a>
              </td>
            </tr>

            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="stat-card">
      <h5 class="mb-4"><i class="fa fa-history me-2"></i>Riwayat Perangkat</h5>
      <ul class="list-group">
        <li class="list-group-item">
          Perangkat 123456 diaktifkan - 10 menit lalu
        </li>
        <li class="list-group-item">
          Perangkat 789012 dinonaktifkan - 30 menit lalu
        </li>
        <li class="list-group-item">
          Perangkat 456789 ditambahkan - 1 jam lalu
        </li>
      </ul>
    </div>
  </div>
</div>

<button
  class="floating-button"
  data-bs-toggle="modal"
  data-bs-target="#formTambahDevice"
>
  <i class="fas fa-plus"></i>
</button>
<!-- Form Dialog Tambah Perangkat -->
<div id="formTambahDevice" class="modal" style="display: none">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="sendDeviceForm">
        <div class="modal-header">
          <h5 class="modal-title">Tambah Perangkat</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label>Nama Perangkat</label>
            <input
              type="text"
              class="form-control"
              id="deviceName"
              placeholder="Nama Perangkat"
              required
            />
          </div>
          <div class="mb-3">
            <label>Nomor Perangkat</label>
            <input
              type="text"
              class="form-control"
              id="devicePhone"
              placeholder="Nomor Perangkat"
              required
            />
          </div>
          <div class="mb-3">
            <label for="packageId"
              >Paket (<a href="/client/package">Lihat detail package</a
              >):</label
            >
            <select
              class="form-control"
              id="packageId"
              name="packageId"
              required
            >
              <% packages.forEach(pkg=> { %>
              <option value="<%= pkg.id %>">
                <%= pkg.name %> - Rp <%= pkg.price %>/bulan
              </option>
              <% }) %>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-secondary" data-bs-dismiss="modal">Batalkan</a>
          <button id="tambahDeviceButton" class="btn btn-success" type="submit">
            Tambah
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Send Message Modal -->
<div id="formKirimPesan" class="modal" style="display: none">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form id="sendMessageForm">
        <div class="modal-header">
          <h5 class="modal-title">Kirim Pesan</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Tipe Pesan:</label>
            <select id="group" class="form-control" required>
              <option value="false">Pribadi</option>
              <option value="true">Grup</option>
            </select>
          </div>
          <div class="form-group">
            <label>Tujuan:</label>
            <input
              type="text"
              id="to"
              class="form-control"
              placeholder="Nomor telepon atau ID grup (pisahkan dengan koma)"
              required
            />
          </div>
          <div class="form-group">
            <label>Isi Pesan:</label>
            <textarea
              id="text"
              class="form-control"
              rows="4"
              placeholder="Tulis pesan Anda..."
              required
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-secondary" data-bs-dismiss="modal">Batalkan</a>
          <button id="kirimPesanButton" class="btn btn-success" type="submit">
            Kirim
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<input type="hidden" id="apiKey" value="<%= apiKey %>" />
<input type="hidden" id="deviceKey" />

<script>
  function addDeviceSession(key) {
    $("#deviceKey").val(key);
  }

  $("#sendMessageForm").submit(function (event) {
    event.preventDefault();

    const deviceKey = $("#deviceKey").val();
    const to = $("#to").val().trim();
    const text = $("#text").val().trim();
    const group = $("#group").val() === "true";

    const kirimPesanButton = $("#kirimPesanButton");
    kirimPesanButton.prop("disabled", true);
    kirimPesanButton.html('<i class="fa fa-spinner fa-spin"></i> Memproses...');

    if (!deviceKey || !to || !text) {
      showToast("Semua field harus diisi!", "danger");
      kirimPesanButton.prop("disabled", false);
      kirimPesanButton.html("Kirim");
      return;
    }

    $.ajax({
      url: "/message/send",
      type: "POST",
      contentType: "application/json",
      data: JSON.stringify({
        key: deviceKey,
        to: to,
        text: text,
        group: group,
      }),
      success: function (response) {
        showToast("Pesan berhasil dikirim:", "success");
        console.log("Pesan berhasil dikirim:", response);

        $("#to").val("");
        $("#text").val("");
      },
      error: function (xhr, status, error) {
        showToast("Terjadi kesalahan saat mengirim pesan.", "danger");
        console.error("Gagal mengirim pesan:", xhr.responseText || error);
      },
      complete: function () {
        kirimPesanButton.prop("disabled", false);
        kirimPesanButton.html("Kirim");
        location.reload();
      },
    });
  });

  $("#sendDeviceForm").submit(function (event) {
    event.preventDefault();

    const apiKey = $("#apiKey").val();
    const deviceName = $("#deviceName").val().trim();
    const phoneNumber = $("#devicePhone").val().trim();
    const packageId = $("#packageId").val().trim();

    const tambahDeviceButton = $("#tambahDeviceButton");
    tambahDeviceButton
      .prop("disabled", true)
      .html('<i class="fa fa-spinner fa-spin"></i> Memproses...');

    if (!deviceName || !phoneNumber) {
      showToast("Nama perangkat dan nomor perangkat harus diisi!", "danger");
      tambahDeviceButton.prop("disabled", false).html("Tambah Device");
      return;
    }

    $.ajax({
      url: "/client/device/register",
      type: "POST",
      dataType: "json",
      contentType: "application/json",
      data: JSON.stringify({
        apiKey,
        deviceName,
        phoneNumber,
        packageId,
      }),
      success: function (result) {
        if (!result.status) {
          showToast(response.message, "danger");
          if (result.redirect) {
            window.location.href = result.redirect;
          }
        } else {
          showToast("Device berhasil ditambahkan.", "success");
          window.location.reload(); // Refresh halaman
        }
      },
      error: function (xhr) {
        let response = xhr.responseJSON;
        if (xhr.status === 400 && response) {
          showToast(response.message, "danger");
          if (response.redirect) {
            window.location.href = response.redirect;
          }
        } else {
          showToast("Terjadi kesalahan saat menambahkan device.", "danger");
        }
      },
      complete: function () {
        tambahDeviceButton.prop("disabled", false).html("Tambah Device");
      },
    });
  });

  // Fungsi untuk mengonfirmasi penghapusan perangkat
  async function confirmDelete(deviceKey) {
    if (!confirm(`Apakah Anda yakin ingin menghapus perangkat ${deviceKey}?`))
      return;

    const apiKey = document.getElementById("apiKey").value;

    try {
      const response = await fetch(
        `/client/device/remove?apiKey=${encodeURIComponent(
          apiKey
        )}&deviceKey=${encodeURIComponent(deviceKey)}`,
        {
          method: "DELETE",
        }
      );

      if (!response.ok) {
        throw new Error("Network response was not ok");
      }

      const result = await response.json();

      if (result.status) {
        showToast("Perangkat berhasil dihapus!", "success");
        window.location.reload();
      } else {
        throw new Error(result.message || "Gagal menghapus perangkat");
      }
    } catch (error) {
      console.error("Error:", error);
      showToast(`Error: ${error.message}`, "danger");
    }
  }
</script>
